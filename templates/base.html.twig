<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="La boutique familial qui vous fera voyager">
		<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
		<meta name="generator" content="Jekyll v4.1.1">
		<title>
			{% block title %}
				El Cafexito
			{% endblock %}
		</title>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
		<link rel="stylesheet" href="{{asset('assets/css/elcafexito.css')}}">
		<link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
		<link href="{{ asset('assets/css/carousel.css') }}" rel="stylesheet">

	</head>
	<body>

		{% include './components/_navbar.html.twig' %}
			{% if block('carousel') is defined %}
				<div id="myCarousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						{% for key,header in headers %}
							<li data-target="#myCarousel" data-slide-to="{{ key }}" {% if key == 0 %} class="active" {% endif %}></li>
						{% endfor %}

					</ol>
					<div class="carousel-inner">
						{% for key,header in headers %}
							<div class="carousel-item {% if key == 0 %} active {% endif %} " style="background: url('/uploads/{{ header.illustration }}'); background-size: cover;">

								<div class="container">
									<div class="carousel-caption text-left acceuilH">
										<h3 class="display-4 titleCar">{{ header.title }}</h3>
										<p class="textCar">{{ header.content }}</p>
										<p>
											<button class="btn  btn-info" href="{{ header.btnUrl }}" target="_blank">{{ header.btnTitle }}</button>
										</p>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
					<a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
				<div class="icon-scroll">
					<div class="mouse">
						<div class="wheel"></div>
					</div>
					<div class="icon-arrows">
						<span></span>
					</div>
				</div>
			{% endif %}

			<div class="marginBlock {% if block('carousel') is not defined %}mt-5{% endif %}"> 

			{% block content %}
			{% endblock %}
				{% include './components/_social.html.twig' %}
				</div>
				{% include './components/_footer.html.twig' %}


			{# <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> #}
			<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
			<script src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
			<script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
			<script src="{{ asset('assets/js/app.js') }}"></script>
		</body>
	</html>
